<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyQuestionBankFragment">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="70dp"
                  android:src="@drawable/goumai"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="已购试卷"
                  android:textSize="16sp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="70dp"
                  android:src="@drawable/cuoti"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="我的错题"
                  android:textSize="16sp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="70dp"
                  android:src="@drawable/biji"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="我的笔记"
                  android:textSize="16sp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="70dp"
                  android:src="@drawable/shuqian"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="我的搜藏"
                  android:textSize="16sp" />
          </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">
          <TextView
              android:id="@+id/self_built_test_paper"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:textColor="@color/white"
              android:background="@color/purple_200"
              android:text="自建试卷"
              android:textSize="20dp"/>
          <TextView
              android:textColor="@color/black"
              android:background="@color/white"
              android:id="@+id/collection_papers"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="搜藏试卷"
              android:textSize="20dp"/>
      </LinearLayout>

      <ListView
          android:id="@+id/listview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>



  </LinearLayout>
</FrameLayout>